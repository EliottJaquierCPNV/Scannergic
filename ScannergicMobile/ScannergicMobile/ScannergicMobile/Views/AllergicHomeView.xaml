<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScannergicMobile.Views.AllergicHomeView"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:ScannergicMobile.ViewModels"  
             xmlns:model="clr-namespace:ScannergicMobile.Models"
             x:Name="AllergicHome">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ajouter un allergène" Command="{Binding AddAllergen}" />
    </ContentPage.ToolbarItems>
    <RefreshView x:DataType="local:AllergicHome" Command="{Binding LoadAllergensCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <ListView x:Name="ItemsListView"
                ItemsSource="{Binding Allergens, Mode=TwoWay}"
                SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Item">
                    <TextCell Text="{Binding Text}" Command="{Binding BindingContext.ItemTapped, Source={x:Reference AllergicHome} }" CommandParameter="{Binding .}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </RefreshView>
</ContentPage>