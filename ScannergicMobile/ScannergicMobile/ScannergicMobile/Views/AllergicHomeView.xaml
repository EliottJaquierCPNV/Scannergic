<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ScannergicMobile.Views.AllergicHomeView"
             Title="{Binding Title}"
             xmlns:local="clr-namespace:ScannergicMobile.ViewModels"  
             xmlns:model="clr-namespace:ScannergicMobile.Models"
             x:Name="AllergicHomeXML">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Ajouter un allergène" Command="{Binding ShowAddAllergenPageCommand}" IconImageSource="icon_plus.png"/>
    </ContentPage.ToolbarItems>
    <RefreshView x:DataType="local:AllergicHomeViewModel" Command="{Binding LoadAllergensCommand}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <ListView x:Name="ItemsListView"
                ItemsSource="{Binding Allergens}"
                SelectionMode="None">
            <ListView.ItemTemplate>
                <DataTemplate x:DataType="model:Allergen">
                    <TextCell Text="{Binding Name}" Command="{Binding BindingContext.AllergenTapped, Source={x:Reference AllergicHomeXML} }" CommandParameter="{Binding .}"/>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </RefreshView>
</ContentPage>